{
  "user_options": {
    "logger": {
      "debug":  true,
      "filter": {
        "type": "",
        "method": "",
        "content": ""
      }
    }
  },

  "developer_options": {
    "logger": {
      "days": 1,
      "console_format": {
        "choose_template": "standard_template",
        "format_templates": {
          "standard_template":{
            "DEBUG": "detail",
            "INFO": "simple",
            "WARN": "standard",
            "ERROR": "detail",
            "FATAL": "detail"
          }
        }
      },

      "file_format": {
        "choose_template": "standard_template",
        "format_templates": {
          "standard_template":{
            "DEBUG": "detail",
            "INFO": "simple",
            "WARN": "standard",
            "ERROR": "detail",
            "FATAL": "detail"
          }
        }
      },

      "format_styles":{
        "simple": "[_TYPE][_TIME]_CONTENT",
        "standard": "[_TYPE][_TIME][method:_METHOD]_CONTENT",
        "detail": "[_TYPE][_TIME][method:_METHOD][_FILE:_LINE]_CONTENT"
      },

      "log_console_color": {
        "choose_color": "standard_color",
        "color_templates": {
          "standard_color":{
            "INFO": 32,
            "DEBUG": 36,
            "WARN": 33,
            "ERROR": 31,
            "FATAL": 41
          }
        },

        "color_code_description": "30:黑 31:红 32:绿 33:黄 34:蓝色 35:紫色 36:深绿 37:白色  背景：40:黑 41:深红 42:绿 43:黄色 44:蓝色 45:紫色 46:深绿 47:白色"
      },

      "log_time": {
        "choose_time": "standard",
        "time_templates": {
          "standard":"yy-mm-dd hh:mm:ss"
        }
      },

      "log_file_postion": {
        "choose_postion": "standard",
        "templates": {
          "standard": {
            "pos": "cache/TIME.log"
          }
        }
      }
    }
  }
}
